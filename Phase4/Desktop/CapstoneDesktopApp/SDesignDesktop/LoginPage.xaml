<Page x:Class="SDesignDesktop.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SDesignDesktop"
      mc:Ignorable="d" 
      Height="1080" Width="1920"
      Title="LoginPage" Background="SteelBlue">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
            <Label x:Name="label" Content="Login" FontSize="17" FontWeight="Bold"  HorizontalContentAlignment="Center"/>
            <TextBlock Margin="70,0">Username:</TextBlock>
            <TextBox x:Name="textBox1" Height="20" Width="100" TextWrapping="Wrap" Background="LightGray"  HorizontalAlignment="Center" BorderBrush="Black" />
            <TextBlock Margin="70,0">Password:</TextBlock>
            <PasswordBox x:Name="passwordBox" Height="20" Width="100" Background="LightGray" HorizontalAlignment="Center" BorderBrush="Black"/>
            <Button x:Name="loginbutton" Content="Login" Height="20" Background="LightGray" Width="50" Margin="0,10" FontWeight="DemiBold" Click="Loginbutton_Click"/>
        </StackPanel>
        <Frame x:Name="login"/>
    </Grid>
</Page>
